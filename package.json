{
  "name": "rhs-pages",
  "version": "1.0.0",
  "description": "A static site development workflow",
  "keywords": [
    "pages-tasks",
    "rhs-pages",
    "cli",
    "ruanhuasi"
  ],
  "homepage": "https://github.com/ruanhuasi/rhs-pages",
  "bugs": {
    "url": "https://github.com/ruanhuasi/rhs-pages/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ruanhuasi"
  },
  "main": "lib/index.js",
  "bin": "bin/rhs-pages.js",
  "scripts": {
    "format": "prettier --write \"**/*.js\"",
    "lint": "standard",
    "prepare": "npm run format & npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "renovate": {
    "extends": [
      "rhs"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "browser-sync": "^2.27.4",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^6.1.0",
    "gulp-load-plugins": "^2.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-swig": "^0.9.1",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^5.0.0",
    "useref": "^1.4.3"
  },
  "devDependencies": {
    "prettier": "2.1.1"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
